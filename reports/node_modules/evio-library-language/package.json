  },
  "description": "A Node.js library for managing translations and language strategies in the EVIO ecosystem.",
  "main": "dist/index.js",
  "scripts": {
    "build": "rm -rf dist; tsc --experimentalDecorators --module commonjs",
    "build:win": "rmdir /s dist; tsc --experimentalDecorators --module commonjs",
    "lint": "eslint '{src,apps,libs,test}/**/*.ts' --fix",
    "format": "prettier --write \"src/**/*.ts\"",
    "test:watch": "vitest",
    "test:pipeline": "vitest run",
    "start": "nodemon index.ts",
    "start:local": "rm -rf node_modules; npm i; npm run build; npm run start;",
    "start:local:win": "rmdir /s node_modules; npm i; npm run build:win; npm run start;",
    "prepublishOnly": "npm run build && npm pack --dry-run"
  },
  "overrides": {
    "glob": "^10.4.5"
  },
  "keywords": [],
  "author": "",
  "contributors": [],
  "license": "ISC",
  "dependencies": {
    "axios": "^1.8.3",
    "evio-library-commons": "^1.0.0",
    "evio-library-configs": "^1.0.0",
    "evio-redis-connection": "^1.0.0",
    "object-hash": "^3.0.0",
    "short-uuid": "^5.2.0",
    "supertest": "^7.0.0",
    "uuid": "^10.0.0",
    "vitest": "^3.1.1",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@eslint/js": "^9.34.0",
	"@types/node": "^20.19.12",
	"eslint-plugin-prettier": "^5.5.4",
	"eslint": "^8.57.1",
	"globals": "^16.3.0",
	"nodemon": "^3.1.10",
