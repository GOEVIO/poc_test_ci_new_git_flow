{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es2017",
    "lib": ["es2020"],
    "types": ["node"],
    "moduleResolution": "node",
    "esModuleInterop": true,
    "outDir": "./dist",
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist"]
}
