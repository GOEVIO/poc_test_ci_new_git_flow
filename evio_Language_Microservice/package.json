  "author": "EVIO",
  "license": "ISC",
  "dependencies": {
    "@ladjs/country-language": "^1.0.3",
    "@sentry/node": "^7.107.0",
    "@sentry/profiling-node": "^7.107.0",
    "axios": "^1.8.3",
    "body-parser": "^1.18.3",
    "cookie-parser": "^1.4.4",
    "cors": "^2.8.5",
    "country-codes-list": "^1.6.10",
    "dotenv-safe": "^6.1.0",
    "express": "^4.17.1",
    "express-http-proxy": "^1.6.0",
    "helmet": "^3.21.2",
    "http": "0.0.0",
    "mongoose": "^5.13.9",
    "morgan": "^1.9.1",
    "nodemon": "^2.0.3",
    "object-hash": "^1.3.1",
    "process": "^0.11.10",
    "supertest": "^7.0.0",
    "vitest": "^3.0.9",
    "evio-library-commons": "^1.0.0",
    "evio-library-language": "^1.0.0",
    "evio-library-connections": "^1.0.0",
    "evio-library-configs": "^1.0.0",
    "evio-redis-connection": "^1.0.0"
  },
  "devDependencies": {
    "@types/dotenv-safe": "^8.1.6",
    "@types/eslint": "^8.56.10",
    "@types/express": "^4.17.21",
    "@types/node": "^20.12.8",
    "@types/nodemon": "^1.19.6",
    "@types/supertest": "^6.0.2",
    "eslint": "^6.8.0",
    "eslint-config-airbnb-base": "^13.1.0",
    "eslint-plugin-import": "^2.14.0",
    "should": "^13.2.3",
    "sinon": "^7.2.7",
    "ts-node": "^10.9.2",
    "typescript": "^4.1.3"
  },
  "nodemonConfig": {
    "restartable": "rs",
    "ignore": [
      "node_modules/**/node_modules"
