  "version": "2.0.0",
  "description": "Microservice for language and translation management",
  "main": "app.js",
  "scripts": {
    "build": "rm -rf build; tsc --experimentalDecorators --module commonjs",
    "lint": "eslint app.js",
    "start": "nodemon app.ts",
    "start:prod": "node --max-old-space-size=10240 ./build/app.js",
    "test": "npm run build; vitest run --silent"
