{
  "name": "notifications_microservice",
  "version": "2.0.0",
  "description": "Microservice for notifications",
  "main": "index.js",
  "scripts": {
    "build:email": "copyfiles -u 1 emailTemplates/**/*.html emailTemplates/**/*.css emailTemplates/**/*.png emailTemplates/**/*.jpg emailTemplates/**/*.svg build/emailTemplates",
    "build:emailwl": "copyfiles -u 1 emailTemplatesWL/**/*.html emailTemplatesWL/**/*.css emailTemplatesWL/**/*.png emailTemplatesWL/**/*.jpg emailTemplatesWL/**/*.svg build/emailTemplatesWL",
    "build:emg": "copyfiles -u 1 img/**/*.png img/**/*.jpg img/**/*.svg build/img",
    "build": "npm run build:email && npm run build:emailwl && npm run build:emg && tsc --experimentalDecorators --module commonjs ",
    "lint": "eslint app.js",
    "start": "nodemon app.ts",
    "start:prod": "node --max-old-space-size=10240 ./build/app.js",
    "start:local": "npm run build && npm run start:prod",
    "test": "npm run build; vitest run --silent"
  },
  "author": "EVIO",
  "license": "ISC",
  "dependencies": {
    "@sentry/node": "^7.107.0",
    "@sentry/profiling-node": "^7.107.0",
    "@types/moment-duration-format": "^2.2.2",
    "axios": "^0.21.1",
    "body-parser": "^1.18.3",
    "cookie-parser": "^1.4.4",
    "cors": "^2.8.5",
    "crypto": "^1.0.1",
    "dotenv-safe": "^6.1.0",
    "ejs": "^3.1.6",
    "exceljs": "^4.3.0",
    "express": "^4.17.1",
    "express-http-proxy": "^1.5.1",
    "handlebars": "^4.7.7",
    "helmet": "^3.21.1",
    "http": "0.0.0",
    "jsonwebtoken": "^9.0.2",
    "ldapjs": "^1.0.2",
    "moment": "^2.29.1",
    "moment-duration-format": "^2.3.2",
    "moment-timezone": "^0.5.31",
    "mongoose": "5.13.22",
    "morgan": "^1.9.1",
    "nodemailer": "^6.4.11",
    "nodemailer-plugin-inline-base64": "^2.1.1",
    "nodemon": "^2.0.3",
    "pdfkit": "^0.12.1",
    "twilio": "^5.5.2",
    "uuid": "^3.3.2",
    "evio-library-commons": "^1.0.0",
    "evio-library-identity": "^1.0.0",
    "evio-library-language": "^1.0.0",
    "evio-library-notifications": "^1.0.0"
  },
  "devDependencies": {
    "eslint": "^5.8.0",
    "eslint-config-airbnb-base": "^13.1.0",
    "eslint-plugin-import": "^2.14.0",
    "should": "^13.2.3",
    "sinon": "^7.2.7",
    "@types/dotenv-safe": "^8.1.6",
    "@types/eslint": "^8.56.10",
    "@types/express": "^4.17.21",
    "@types/node": "^20.12.8",
    "@types/nodemon": "^1.19.6",
    "@types/supertest": "^6.0.2",
    "copyfiles": "^2.4.1",
    "supertest": "^7.0.0",
    "ts-node": "^10.9.2",
    "typescript": "^4.1.3",
    "vitest": "^3.0.9"
  },
  "nodemonConfig": {
    "restartable": "rs",
    "ignore": [
      "node_modules/**/node_modules"
    ],
    "delay": "2500",
    "env": {
      "PORT": 3008,
      "PORT_DEV": 3008
    }
  }
}
