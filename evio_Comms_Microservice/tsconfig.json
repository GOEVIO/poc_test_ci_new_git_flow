{
    "compilerOptions": {
        "target": "ES2020",
        "module": "commonjs",
        "rootDir": "./src/",
        "outDir": "build",
        "strict": true,
        "noImplicitAny": false,
        "strictNullChecks": true,
        "checkJs": false,
        "allowJs": true,
        "moduleResolution": "node",
        "types": ["node"],
        "lib": ["es6"],
        "esModuleInterop": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "allowUnreachableCode": true,
        "useUnknownInCatchVariables": false,
        "resolveJsonModule": true,
    },
    "include": ["**/*.ts", "**/*.json"],
}
