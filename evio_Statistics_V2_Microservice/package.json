{
  "name": "statistics_microservice",
  "version": "0.3.7",
  "description": "Microservice to management of statistics.",
  "main": "build/app.js",
  "scripts": {
    "build": "rm -rf dist; tsc --build",
    "build:win": "rmdir /s /q dist && tsc",
    "lint": "eslint '{src,apps,libs,test}/**/*.ts' --fix",
    "format": "prettier --write \"src/**/*.ts\"",
    "test:watch": "jest --watch",
    "test:pipeline": "jest",
    "start": "nodemon ./build/app.js",
    "start:prod": "node --max-old-space-size=10240 ./build/app.js",
    "start:local": "npm run build && npm run start:prod",
    "test": "jest --config ./jest.config.js --coverage --forceExit"
  },
  "author": "EVIO",
  "license": "ISC",
  "dependencies": {
    "@sentry/node": "^7.119.0",
    "axios": "^0.19.0",
    "cookie-parser": "^1.4.4",
    "cors": "^2.8.5",
    "country-list": "^2.3.0",
    "dotenv-safe": "^6.1.0",
    "evio-event-producer": "file:../evio-event-producer/dist",
    "evio-library-billing": "^1.0.0",
    "evio-library-chargers": "^1.0.0",
    "evio-library-commons": "^1.0.1",
    "evio-library-identity": "^1.0.0",
    "evio-library-ocpi": "^1.0.0",
    "evio-library-statistics": "^1.0.2",
    "evio-toggle": "^1.0.0",
    "express": "^4.17.1",
    "express-http-proxy": "^1.5.1",
    "helmet": "^3.21.2",
    "http": "0.0.0",
    "http-status-codes": "^2.3.0",
    "joi": "^18.0.1",
    "moment": "^2.24.0",
    "moment-timezone": "^0.5.34",
    "mongoose": "^5.13.9",
    "morgan": "^1.9.1",
    "node-cron": "^2.0.3",
    "nodemon": "^2.0.3",
    "query-to-mongo": "^0.10.1",
    "stripe": "^8.55.0",
    "swagger-jsdoc": "^3.4.0",
    "swagger-ui-express": "^4.1.2"
  },
  "devDependencies": {
    "@jest/globals": "^29.7.0",
    "eslint": "^8.57.1",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-plugin-import": "^2.32.0",
    "jest": "^29.7.0",
    "mocha": "^7.1.2",
    "should": "^13.2.3",
    "sinon": "^7.2.7",
    "typescript": "^5.8.3"
  },
  "nodemonConfig": {
    "restartable": "rs",
    "ignore": [
      "node_modules/**/node_modules"
    ],
    "delay": "2500",
    "env": {
      "PORT": 3031,
      "PORT_DEV": 3031
    }
  }
}
